<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFACD"
        android:fontFamily="@font/robotocondensed_regular"
        android:text="Librorum"
        android:textAlignment="center"
        android:textColor="#26110E"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/sortbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#DECEA1"
            android:fontFamily="@font/robotocondensed_regular"
            android:text="Начать"
            android:textColor="#26110E"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <Button
            android:id="@+id/sortedbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#DECEA1"
            android:fontFamily="@font/robotocondensed_regular"
            android:text="Список желаемого"
            android:textColor="#26110E"
            app:layout_constraintTop_toBottomOf="@+id/sortbtn" />

        <Button
            android:id="@+id/recombtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#DECEA1"
            android:fontFamily="@font/robotocondensed_regular"
            android:text="Список рекомендаций"
            android:textColor="#26110E"
            app:layout_constraintTop_toBottomOf="@+id/sortedbtn" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>